<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BlameInfo">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAlignment="center"
        tools:context=".IstEpOneHints">

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/sunset_background" />

        <TextView
            android:id="@+id/textView27"
            android:layout_width="597dp"
            android:layout_height="210dp"
            android:background="#00BCD4"
            android:text="Kaydırılabilen ilk kısımda şu ana kadar keşfedilen şüpheliler var ve birini seçtiğinde altındaki kutucukta o şüpheliyi suçlu olarak yazmış olursun.\nOrta kısımda ise suç silahı ya da şekli olabilecek bazı seçenekler var aynı şekilde birini seçtiğinde alta suç aleti olarak yazılır.\nÜçücü kısımda ise suç saati olabilecek saatler yazar. Saatlerden birini seçtiğinde aynı şekilde alta suç saati olarak geçer. Üçünü de seçtikten sonra suçlaya basabilirsin.Eğer doğru buludysan olayın olduğu il menüsüne atar yanlış bulduysan uyarır."
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.428" />

        <Button
            android:id="@+id/button154"
            android:layout_width="599dp"
            android:layout_height="69dp"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:background="@drawable/orangebutton"
            android:onClick="toBack"
            android:text="Geri dön"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>