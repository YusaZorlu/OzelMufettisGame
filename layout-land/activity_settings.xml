<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:textAlignment="center"
    tools:context=".Settings">

    <Button
        android:id="@+id/button82"
        android:layout_width="164dp"
        android:layout_height="63dp"
        android:layout_marginTop="300dp"
        android:layout_weight="1"
        android:background="@drawable/blue_button"
        android:onClick="backToMain"
        android:text="Geri"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.941"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button83"
        android:layout_width="351dp"
        android:layout_height="85dp"
        android:layout_marginTop="248dp"
        android:layout_weight="1"
        android:background="@drawable/orangebutton"
        android:onClick="toAbout"
        android:text="Hakkında"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.088"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/sunset_background" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="249dp"
        android:layout_height="79dp"
        android:layout_marginStart="92dp"
        android:layout_marginBottom="23dp"
        android:text="Ayarlar"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="44dp"
        app:layout_constraintBottom_toTopOf="@+id/switch4"
        app:layout_constraintStart_toEndOf="@+id/switch4"
        app:layout_constraintStart_toStartOf="parent" />

    <Switch
        android:id="@+id/switch4"
        android:layout_width="212dp"
        android:layout_height="65dp"
        android:layout_marginStart="112dp"
        android:layout_marginTop="140dp"
        android:background="@drawable/blue_button"
        android:onClick="soundSetting"
        android:scaleX="1.7"
        android:scaleY="1.7"
        android:text="Ses Kapat/Aç"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>