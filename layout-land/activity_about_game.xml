<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutGame">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAlignment="center"
        tools:context=".IstEpOneHints">

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/sunset_background" />

        <TextView
            android:id="@+id/textView27"
            android:layout_width="658dp"
            android:layout_height="215dp"
            android:background="#00BCD4"
            android:text="-Özel Müfettiş oyunundaki şüpheliler/suçlular ve kurbanların gerçek kişilerle alakası yoktur.\n- Oyundaki görsellerin tamamının ticari amaçla kullanım hakları vardır ancak görseller bana ait değildir.\nOyundaki karakterler ve oyunun hikayesi bana(Yuşa Zorlu) aittir.\n-Oyun müziği = Shadowlands Horizon\nSahibi = Kevin MacLeod (incompetech.com) \nLisansı= Licensed under Creative Commons: By Attribution 3.0 http://creativecommons.org/licenses/by/3.0/"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button42"
            android:layout_width="599dp"
            android:layout_height="69dp"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:background="@drawable/orangebutton"
            android:onClick="toBack"
            android:text="Geri dön"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>