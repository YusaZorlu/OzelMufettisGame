<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AntEpOne">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".IstEpOne">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#000000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/sunset_background" />

        <LinearLayout
            android:id="@+id/linearLayout0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/layout_a"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button71"
                    android:layout_width="197dp"
                    android:layout_height="86dp"
                    android:onClick="toNotes"
                    android:text="Notlar" />

                <Button
                    android:id="@+id/button65"
                    android:layout_width="195dp"
                    android:layout_height="82dp"
                    android:onClick="toHints"
                    android:text="İpuçları" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView1"
                android:layout_width="313dp"
                android:layout_height="264dp"
                android:background="#64C8FF"
                android:text="Antalya'da tatilin ortasındayken üst kattan bir çığlık sesi geldi. Üst kata çıkıp baktığında kanlar içinde bir kadın ve ölü kadının başında bekleyen bir kaç otel sakini var. Kadının üzerinden 309 yazan otel kartı çıktı. Polisler oteldeki herkesi sorgulayıp oteli kapatmayı düşünüyor. Katilin kim olduğunu hızlıca bul ve tatiline kaldığın yerden devam et müfettiş." />

            <LinearLayout
                android:id="@+id/layout_b"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="74dp"
                    android:background="#FF6464"
                    android:text="Keşfedilen Mekanlar: 3/7"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="#FF9800"
                    android:text="Keşfedilen Şüpheliler: 2/7"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="match_parent"
                    android:layout_height="74dp"
                    android:onClick="toBack"
                    android:text="Geri Dön" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="0dp"
            android:layout_height="122dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout0">

            <Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="63dp"
                android:layout_weight="1"
                android:background="@drawable/blue_button"
                android:onClick="toQuestioning"
                android:text="Sorgula" />

            <Button
                android:id="@+id/button5"
                android:layout_width="wrap_content"
                android:layout_height="63dp"
                android:layout_weight="1"
                android:background="@drawable/blue_button"
                android:onClick="toInvestigate"
                android:text="Mekanları İncele" />

            <Button
                android:id="@+id/button6"
                android:layout_width="wrap_content"
                android:layout_height="63dp"
                android:layout_weight="1"
                android:background="@drawable/blue_button"
                android:onClick="toBlame"
                android:text="Suçla" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>